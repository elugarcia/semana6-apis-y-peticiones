{
  "compilerOptions": {
    "target": "es5", // Define en qué versión de JS queremos convertir el .ts
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src" // Indica qué archivos vamos a compilar, usar * indica que serán todos. En este caso "src" indica que serán todos los archivos dentro de la carpeta src.
  ]
}
